@model CyrillicProject.Models.APICall

@{
	ViewBag.Title = "Query";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
	<h2>Query</h2>
	using (Html.BeginForm("Query", "APICalls", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
	{
		@Html.AntiForgeryToken()
		<h4>Restfull query</h4>
		@Html.TextBoxFor(m => m.Request, new { @class = "form-control" })
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" class="btn btn-default" value="Submit" />
			</div>
		</div>
	}
}
else
{
	<h1>Please login to use this feature</h1>
}

